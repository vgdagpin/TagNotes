{
	"compilerOptions": {
		"target": "ES2022",
		"module": "CommonJS",
		"moduleResolution": "node",
		"outDir": "dist-electron",
		"rootDir": "electron",
		"allowJs": false,
		"resolveJsonModule": true,
		"isolatedModules": false,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["electron/preload.ts"],
	"exclude": ["dist", "dist-electron"]
}
